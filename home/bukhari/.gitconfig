[user]
	name = Bukhari Ahmed
	email = ahmadieb@gmail.com
[gc]
	autoDetach = false
[push]
	default = current
[core]
  editor = nvim 
  pager = delta
[interactive]
  diffFilter = delta --color-only --features=interactive
[color]
	ui = true
[color "diff"]
  oldMoved = bold black
  oldMovedAlternative = bold black
  newMoved = bold red
  newMovedAlternative = bold red
[diff]
  ; colorMoved = default
	algorithm = patience
  tool = nvimdiff
[delta]
  syntax-theme = Catppuccin-mocha
  line-numbers = true
  line-numbers-left-format = ""
  line-numbers-right-format = "{np} "
  minus-style = black red
  plus-style = black green
  plus-emph-style = black white
  minus-emph-style = white black
  line-numbers-minus-style = black
  line-numbers-plus-style = black
  hunk-header-style = omit
  file-style = omit
  zero-style = syntax
[merge]
  tool = vim_mergetool
  conflictstyle = diff3
[mergetool]
  prompt = false
[mergetool "vim_mergetool"]
  cmd = nvim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
  trustExitCode = false
[difftool]
  prompt = false
[difftool "nvimdiff"]
  cmd = nvim -d "$REMOTE" "$LOCAL"
[status]
	showUntrackedFiles = no
[credential]
	helper = store
