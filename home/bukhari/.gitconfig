[user]
	name = Bukhari Ahmed
	email = ahmadieb@gmail.com
[gc]
	autoDetach = false
[push]
	default = current
[core]
  editor = nvim 
  pager = delta
[interactive]
  diffFilter = delta --color-only
[color]
	ui = true
[color "diff"]
  oldMoved = bold black
  oldMovedAlternative = bold black
  newMoved = bold red
  newMovedAlternative = bold red
[diff]
  colorMoved = default
	algorithm = patience
  tool = nvimdiff
[delta]
  # side-by-side = true
  syntax-theme = ayu-dark
  color-only = true
  line-numbers = true
  line-numbers-left-format = ""
  line-numbers-right-format = "{np} "
  # keep-plus-minus-markers = false
  # minus-style = syntax "#003A11" 
  # plus-style = syntax "#005617"
  minus-style = syntax red
  # plus-style = black green
  plus-emph-style = black white
  minus-emph-style = black white
[merge]
  tool = vim_mergetool
  conflictstyle = diff3
[mergetool]
  prompt = false
[mergetool "vim_mergetool"]
  cmd = nvim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
  trustExitCode = false
[difftool]
  prompt = false
[difftool "nvimdiff"]
  cmd = nvim -d "$REMOTE" "$LOCAL"
[status]
	showUntrackedFiles = no
