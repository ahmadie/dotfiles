[user]
	name = bukhari
	email = a.bukhari@tworks.co.jp
[gc]
	autoDetach = false
[credential]
	helper = store
[push]
	default = current
[core]
    editor = nvim 
    pager = delta
[interactive]
    diffFilter = delta --color-only
[color]
	ui = true
[color "diff"]
  meta = "yellow bold"
  commit = "green bold"
  frag = "magenta bold"
  old = "red bold"
  new = "green bold"
  whitespace = "red reverse"
[color "diff-highlight"]
  oldNormal = "red bold"
  oldHighlight = "red bold 52"
  newNormal = "green bold"
  newHighlight = "green bold 22"
  editor = nvim 
  pager = delta
[diff]
  colorMoved = default
	algorithm = patience
[delta]
  color-only = true
  line-numbers = true
  line-numbers-left-format = ""
  line-numbers-right-format = "{np} "
  # keep-plus-minus-markers = false

